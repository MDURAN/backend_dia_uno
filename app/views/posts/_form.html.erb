        <div class="form-group">
          <%= f.label :photo %>
          <%= f.file_field :photo, class: "form-control" %>
        </div>
        <div id="wysi-toolbar"></div>
        <div class="form-group">
          <%= f.label :contenido %><br>
          <%= f.text_area :contenido, style:"width:100%;height:200px;", class: "form-control", id:"wysi-editor" %>
        </div>
        <div class="text-center">
          <%= f.submit "Subir Post", class: "form-control btn btn-info" %>
        </div>
      <% end %>